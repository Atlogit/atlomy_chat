{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(module)s:%(funcName)s:%(lineno)d - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "migration_file": {
            "class": "logging.FileHandler",
            "formatter": "standard",
            "filename": "logs/migration/migration_persistent.log",
            "mode": "a",
            "encoding": "utf-8"
        }
    },
    "root": {
        "handlers": ["console", "migration_file"],
        "level": "INFO",
        "propagate": false
    },
    "loggers": {
        "migration": {
            "handlers": ["migration_file"],
            "level": "INFO",
            "propagate": false
        },
        "migration.citation": {
            "handlers": ["migration_file"],
            "level": "INFO",
            "propagate": false
        },
        "migration.database": {
            "handlers": ["migration_file"],
            "level": "INFO",
            "propagate": false
        }
    }
}
