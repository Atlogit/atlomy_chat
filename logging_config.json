{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(module)s:%(funcName)s:%(lineno)d - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "standard",
            "filename": "logs/atlomy_chat.log",
            "maxBytes": 5242880,
            "backupCount": 5,
            "encoding": "utf8"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["console", "file"],
        "propagate": false
    },
    "loggers": {
        "uvicorn": {
            "handlers": [],
            "level": "INFO",
            "propagate": true
        },
        "fastapi": {
            "handlers": [],
            "level": "INFO",
            "propagate": true
        },
        "atlomy_chat": {
            "handlers": [],
            "level": "INFO",
            "propagate": true
        },
        "migration": {
            "handlers": [],
            "level": "DEBUG",
            "propagate": true
        },
        "migration.citation": {
            "handlers": [],
            "level": "DEBUG",
            "propagate": true
        },
        "migration.database": {
            "handlers": [],
            "level": "DEBUG",
            "propagate": true
        },
        "watchfiles": {
            "handlers": [],
            "level": "WARNING",
            "propagate": true
        }
    }
}
