{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(module)s:%(funcName)s:%(lineno)d - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "filename": "./amta/logs/atlomy_chat.log",
            "maxBytes": 5242880,
            "backupCount": 5,
            "encoding": "utf8"
        },
        "fastapi": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "filename": "./amta/logs/fastapi_debug.log",
            "maxBytes": 5242880,
            "backupCount": 5,
            "encoding": "utf8"
        }
    },
    "root": {
        "handlers": ["console"],
        "level": "${LOG_LEVEL}",
        "propagate": false
    },
    "loggers": {
        "app.services.citation_service": {
            "handlers": ["file"],
            "level": "${LOG_LEVEL}",
            "propagate": false
        },
        "uvicorn": {
            "handlers": ["fastapi"],
            "level": "${LOG_LEVEL}",
            "propagate": false
        },
        "uvicorn.error": {
            "handlers": ["fastapi"],
            "level": "${LOG_LEVEL}",
            "propagate": false
        },
        "uvicorn.access": {
            "handlers": ["fastapi"],
            "level": "${LOG_LEVEL}",
            "propagate": false
        },
        "fastapi": {
            "handlers": ["fastapi"],
            "level": "${LOG_LEVEL}",
            "propagate": false
        },
        "atlomy_chat": {
            "handlers": ["fastapi"],
            "level": "${LOG_LEVEL}",
            "propagate": false
        },
        "watchfiles": {
            "handlers": ["fastapi"],
            "level": "WARNING",
            "propagate": false
        }
    }
}
