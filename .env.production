# AMTA Production Environment Configuration

# Deployment Mode Configuration
DEPLOYMENT_MODE=production

# AWS Secrets Manager Integration
AWS_SECRETS_MANAGER_SECRET_ID=amta-production-secrets
AWS_SECRETS_RETRIEVAL_MODE=dynamic

# AWS Region Configuration
AWS_REGION=us-east-1

# Database Configuration (will be overridden by AWS Secrets Manager)
DATABASE_URL=postgresql+asyncpg://production_user:secure_password@production_host/amta_greek
POSTGRES_HOST=production_db_host
POSTGRES_PORT=5432
POSTGRES_DB=amta_greek
POSTGRES_USER=production_user
# Password will be managed by AWS Secrets Manager

# Redis Configuration
REDIS_URL=redis://production_redis_host:6379
REDIS_HOST=production_redis_host
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600
TEXT_CACHE_TTL=86400
SEARCH_CACHE_TTL=1800

# AWS Bedrock LLM Configuration
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_ID=anthropic/claude-v2

# Logging and Monitoring
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/amta/app.log

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
WORKERS=4

# Security Configuration
SECRET_KEY=generate_a_long_random_secure_key_here_at_least_32_characters
ALLOWED_HOSTS=your-production-domain.com,www.your-production-domain.com,production-ip-address

# Feature Flags
ENABLE_CORS=True
DEBUG_MODE=False

# Advanced Configuration
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
LLM_CONTEXT_WINDOW=8192

# Deployment Specific Settings
DEPLOYMENT_TIMESTAMP=$(date +%Y%m%d_%H%M%S)
